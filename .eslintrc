{
  "extends": "airbnb",
  "parserOptions": {
   "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": true,
      "requireReturnDescription": true
    }],
    "prefer-template": off,
    "no-param-reassign": off,
    "no-plusplus": [
      "error",
      { "allowForLoopAfterthoughts": true }
    ]
  }
}
